{
  "name": "searchhighlight",
  "displayName": "SearchHighlight",
  "description": "SearchHighlight主要功能是搜索代码变量和函数以及其他字符并根据搜索到的字符串所在行中的读写属性来显示不同的颜色",
  "version": "1.0.7",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onCommand:searchhighlight.searchAndHighlight"
  ],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/JackyWongX/searchhighlight"
  },
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "search-highlight",
          "title": "Search Highlight",
          "icon": "$(search)"
        }
      ]
    },
    "views": {
      "search-highlight": [
        {
          "id": "searchHighlightResults",
          "name": "Search Results",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "searchhighlight.searchAndHighlight",
        "title": "Search and Highlight Selected Text"
      },
      {
        "command": "searchhighlight.reloadPatterns",
        "title": "重新加载写操作检测规则"
      },
      {
        "command": "searchhighlight.focus",
        "title": "Focus Search Results View"
      },
      {
        "command": "searchhighlight.clearHighlight",
        "title": "Clear Search Highlighting"
      }
    ],
    "keybindings": [
      {
        "command": "searchhighlight.searchAndHighlight",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f",
        "when": "editorFocus && editorTextFocus"
      },
      {
        "command": "searchhighlight.clearHighlight",
        "key": "escape",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Search Highlight",
      "properties": {
        "searchhighlight.patterns": {
          "type": "object",
          "default": {
            "common": {
              "operators": [
                "=",
                "+=",
                "-=",
                "*=",
                "/=",
                "%=",
                "++",
                "--"
              ],
              "methods": [
                "append",
                "add",
                "insert",
                "remove",
                "delete",
                "clear",
                "set",
                "push",
                "pop",
                "shift",
                "unshift",
                "push_back"
              ],
              "excludeOperators": [
                "==",
                "===",
                "!=",
                "!==",
                ">=",
                "<=",
                ">",
                "<"
              ]
            }
          },
          "description": "写操作检测的关键字配置。可以配置运算符和方法名。",
          "markdownDescription": "写操作检测的关键字配置。包含:\n- `operators`: 运算符列表\n- `methods`: 方法名列表\n- `excludeOperators`: 过滤用的比较操作符列表"
        },
        "searchhighlight.colors.read": {
          "type": "string",
          "default": "rgba(64, 200, 64, 0.5)",
          "description": "读操作高亮颜色"
        },
        "searchhighlight.colors.write": {
          "type": "string",
          "default": "rgba(240, 64, 64, 0.5)",
          "description": "写操作高亮颜色"
        },
        "searchhighlight.excludePatterns": {
          "type": "array",
          "default": [
            ".git",
            ".svn",
            ".hg",
            ".vs",
            ".vscode",
            "node_modules",
            "dist",
            "build",
            "target",
            "bin",
            "obj",
            "out",
            "temp",
            "tmp",
            "coverage",
            "__pycache__",
            "*.egg-info",
            "vendor"
          ],
          "description": "要排除的目录列表",
          "items": {
            "type": "string"
          }
        },
        "searchhighlight.matchWholeWord": {
          "type": "boolean",
          "default": true,
          "description": "是否全词匹配"
        },
        "searchhighlight.caseSensitive": {
          "type": "boolean",
          "default": true,
          "description": "是否区分大小写"
        },
        "searchhighlight.excludeFileExtensions": {
          "type": "array",
          "default": [
            ".pb.h",
            ".pb.cc",
            ".generated.h",
            ".generated.cpp",
            ".g.cs",
            ".designer.cs",
            ".min.js",
            ".min.css",
            ".d.ts",
            ".map",
            ".pyc",
            ".pyo",
            ".pyd",
            ".dll",
            ".exe",
            ".so",
            ".dylib",
            ".lib",
            ".obj",
            ".o",
            ".class",
            ".cache"
          ],
          "description": "要排除的文件后缀列表。这些后缀的文件将在搜索时被忽略。",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "publisher": "JackyWong",
  "icon": "./images/icon.png",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "iconv-lite": "^0.6.3",
    "jschardet": "^3.1.4"
  }
}
